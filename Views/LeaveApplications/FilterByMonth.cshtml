@model IEnumerable<LeaveManagementSystem.Models.LeaveApplication>

@{
    ViewData["Title"] = "Filter Applications by Month";
}

<h1>Filter Applications by Month</h1>

<form asp-action="FilterByMonth" method="get">
    <div class="form-group">
        <label for="month">Enter month:</label>
        <input type="month" id="month" name="month" placeholder="YYYY-MM">
        <input type="submit" value="Filter" class="btn-primary">
    </div>
</form>

@if (Model.Any())
{
    <h2>Filtered Applications</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppliedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    Duration (Days)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppliedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @((item.EndDate - item.StartDate).TotalDays)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No applications found for the selected month.</p>
}
